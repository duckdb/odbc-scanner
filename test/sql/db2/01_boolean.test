# name: test/sql/db2/01_boolean.test
# description: test for DB2 BOOLEAN type
# group: [db2_01_boolean]

require odbc_scanner

statement ok
SET VARIABLE conn = odbc_connect('ODBCSCANNER_DEBUG_CONN_STRING_ENV_VAR=ODBC_CONN_STRING')

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(TRUE AS BOOLEAN) FROM sysibm.sysdummy1')
----
TRUE

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(FALSE AS BOOLEAN) FROM sysibm.sysdummy1')
----
FALSE

query I
SELECT column_type from (
  DESCRIBE SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(TRUE AS BOOLEAN) FROM sysibm.sysdummy1')
)
----
BOOLEAN

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS BOOLEAN) FROM sysibm.sysdummy1', params=row(TRUE))
----
TRUE

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS BOOLEAN) FROM sysibm.sysdummy1', params=row(FALSE))
----
FALSE

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS BOOLEAN) FROM sysibm.sysdummy1', params=row(NULL))
----
NULL

statement ok
SET VARIABLE params1 = odbc_create_params()

statement ok
PREPARE p1 AS SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS BOOLEAN) FROM sysibm.sysdummy1', params_handle=getvariable('params1'))

statement ok
PREPARE p1_bind AS SELECT odbc_bind_params(getvariable('conn'), getvariable('params1'), row(?))

statement ok
EXECUTE p1_bind(TRUE)

query I
EXECUTE p1
----
TRUE

statement ok
EXECUTE p1_bind(FALSE)

query I
EXECUTE p1
----
FALSE

statement ok
EXECUTE p1_bind(NULL)

query I
EXECUTE p1
----
NULL

statement ok
DEALLOCATE p1_bind

statement ok
DEALLOCATE p1

statement ok
SELECT odbc_close(getvariable('conn'))
