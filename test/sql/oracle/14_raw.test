# name: test/sql/oracle/14_raw.test
# description: test for Oracle RAW type
# group: [oracle_14_raw]

require odbc_scanner

statement ok
SET VARIABLE conn = odbc_connect('ODBCSCANNER_DEBUG_CONN_STRING_ENV_VAR=ODBC_CONN_STRING')

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(hextoraw(''666f6f00626172'') AS RAW(7)) FROM dual')
----
foo\x00bar

query I
SELECT column_type from (
  DESCRIBE SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(hextoraw(''666f6f626172'') AS RAW(7)) FROM dual')
)
----
BLOB

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS RAW(3)) FROM dual', params=row('foo'::BLOB))
----
foo

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS RAW(6)) FROM dual', params=row('foo'::BLOB))
----
foo

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS RAW(7)) FROM dual', params=row('foo\x00bar'::BLOB))
----
foo\x00bar

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS RAW(2000)) FROM dual', params=row(NULL::BLOB))
----
NULL

statement ok
SET VARIABLE params1 = odbc_create_params()

statement ok
PREPARE p1 AS SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS RAW(7)) FROM dual', params_handle=getvariable('params1'))

statement ok
PREPARE p1_bind AS SELECT odbc_bind_params(getvariable('conn'), getvariable('params1'), row(?))

statement ok
EXECUTE p1_bind('foo\x00bar'::BLOB)

query I
EXECUTE p1
----
foo\x00bar

statement ok
DEALLOCATE p1_bind

statement ok
DEALLOCATE p1

statement ok
SELECT odbc_close(getvariable('conn'))
