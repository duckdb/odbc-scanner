# name: test/sql/type_float.test
# description: test for FLOAT type
# group: [sql_type_float]

require odbc_scanner

statement ok
SET VARIABLE conn = odbc_connect('Driver={DuckDB Driver};')

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT 42.123::FLOAT')
----
42.123

query I
SELECT column_type from (
  DESCRIBE SELECT * FROM odbc_query(getvariable('conn'), 'SELECT 42.123::FLOAT')
)
----
FLOAT

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT 42.123::FLOAT')
----
42.123

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::FLOAT', params=row(42.123::FLOAT))
----
42.123

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::FLOAT', params=row(0::FLOAT))
----
0

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::FLOAT', params=row(-42.123::FLOAT))
----
-42.123

statement ok
SET VARIABLE params1 = odbc_create_params()

statement ok
PREPARE p1 AS SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::FLOAT', params_handle=getvariable('params1'))

statement ok
PREPARE p1_bind AS SELECT odbc_bind_params(getvariable('params1'), row(?))

statement ok
EXECUTE p1_bind(42.123::FLOAT)

query I
EXECUTE p1
----
42.123

statement ok
DEALLOCATE p1_bind

statement ok
DEALLOCATE p1

statement ok
SELECT odbc_close(getvariable('conn'))
