# name: test/sql/mssql/17_smalldatetime.test
# description: test for SMALLDATETIME type with MSSQL
# group: [mssql_17_smalldatetime]

require odbc_scanner

statement ok
SET VARIABLE conn = odbc_connect('ODBCSCANNER_DEBUG_CONN_STRING_ENV_VAR=ODBC_CONN_STRING')

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''2020-12-31 23:58:00'' AS SMALLDATETIME)')
----
2020-12-31 23:58:00

query I
SELECT column_type from (
  DESCRIBE SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(''2020-12-31 23:58:00'' AS SMALLDATETIME)')
)
----
TIMESTAMP

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS SMALLDATETIME)', params=row('2020-12-31 23:58:00'::TIMESTAMP))
----
2020-12-31 23:58:00

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS SMALLDATETIME)', params=row('2020-12-31 23:58:59.123456'::TIMESTAMP))
----
2020-12-31 23:59:00

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS SMALLDATETIME)', params=row('1900-01-01 00:00:00.000000'::TIMESTAMP))
----
1900-01-01 00:00:00

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS SMALLDATETIME)', params=row('2079-06-06 23:59:00'::TIMESTAMP))
----
2079-06-06 23:59:00

statement ok
SET VARIABLE params1 = odbc_create_params()

statement ok
PREPARE p1 AS SELECT * FROM odbc_query(getvariable('conn'), 'SELECT CAST(? AS SMALLDATETIME)', params_handle=getvariable('params1'))

statement ok
PREPARE p1_bind AS SELECT odbc_bind_params(getvariable('conn'), getvariable('params1'), row(?))

statement ok
EXECUTE p1_bind('2020-12-31 23:58:00'::TIMESTAMP)

query I
EXECUTE p1
----
2020-12-31 23:58:00

statement ok
EXECUTE p1_bind('2020-12-31 23:58:59.123456'::TIMESTAMP)

query I
EXECUTE p1
----
2020-12-31 23:59:00

statement ok
DEALLOCATE p1_bind

statement ok
DEALLOCATE p1

statement ok
SELECT odbc_close(getvariable('conn'))
