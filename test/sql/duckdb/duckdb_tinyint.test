# name: test/sql/duckdb/duckdb_tinyint.test
# description: test for DuckDB TINYINT type
# group: [sql_duckdb_tinyint]

require odbc_scanner

require-env DUCKDB_AVAILABLE

statement ok
SET VARIABLE conn = odbc_connect('Driver={DuckDB Driver};')

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT 42::TINYINT')
----
42

query I
SELECT column_type from (
  DESCRIBE SELECT * FROM odbc_query(getvariable('conn'), 'SELECT 42::TINYINT')
)
----
TINYINT

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::TINYINT', params=row(42::TINYINT))
----
42

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::TINYINT', params=row(0::TINYINT))
----
0

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::TINYINT', params=row(127::TINYINT))
----
127

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::TINYINT', params=row(-127::TINYINT))
----
-127

statement ok
SET VARIABLE params1 = odbc_create_params()

statement ok
PREPARE p1 AS SELECT * FROM odbc_query(getvariable('conn'), 'SELECT ?::TINYINT', params_handle=getvariable('params1'))

statement ok
PREPARE p1_bind AS SELECT odbc_bind_params(getvariable('conn'), getvariable('params1'), row(?))

statement ok
EXECUTE p1_bind(127::TINYINT)

query I
EXECUTE p1
----
127

statement ok
DEALLOCATE p1_bind

statement ok
DEALLOCATE p1

statement ok
SELECT odbc_close(getvariable('conn'))
