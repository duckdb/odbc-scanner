# name: test/sql/flightsql/type_bigint.test
# description: test for BIGINT type with FlightSQL
# group: [flightsql_type_bigint]

require odbc_scanner

statement ok
SET VARIABLE conn = odbc_connect('ODBCSCANNER_DEBUG_CONN_STRING_ENV_VAR=ODBC_CONN_STRING')

query I
SELECT * FROM odbc_query(getvariable('conn'), 'SELECT 42::BIGINT')
----
42

query I
SELECT column_type from (
  DESCRIBE SELECT * FROM odbc_query(getvariable('conn'), 'SELECT 42::BIGINT')
)
----
BIGINT

statement ok
SELECT odbc_close(getvariable('conn'))
